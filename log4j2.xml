<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="spark-kafka-log" packages="com.cloudera">
    <Appenders>
        <Kafka name="Kafka" topic="kafka_log4j_topic">
            <PatternLayout pattern="%date %message"/>
            <Property name="bootstrap.servers">172.25.37.70:9092,172.25.40.135:9092,172.25.44.70:9092</Property>
        </Kafka>
        <Async name="Async">
            <AppenderRef ref="Kafka"/>
        </Async>

        <Console name="stdout" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5p [%-7t] %F:%L - %m%n"/>
        </Console>

    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Kafka"/>
            <AppenderRef ref="stdout"/>
        </Root>
        <Logger name="org.apache.kafka" level="INFO" /> <!-- avoid recursive logging -->
    </Loggers>
</Configuration>
